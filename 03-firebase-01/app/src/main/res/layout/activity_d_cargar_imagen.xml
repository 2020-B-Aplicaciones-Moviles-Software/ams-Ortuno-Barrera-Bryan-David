<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DCargarImagen">

    <Button
        android:id="@+id/btn_cargar_imagen"
        android:layout_width="133dp"
        android:layout_height="56dp"
        android:layout_marginTop="80dp"
        android:text="Cargar Foto"
        app:layout_constraintEnd_toEndOf="@+id/idImagen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/idImagen"
        app:layout_constraintTop_toBottomOf="@+id/idImagen" />

    <Button
        android:id="@+id/btn_tomar_imagen"
        android:layout_width="133dp"
        android:layout_height="56dp"
        android:layout_marginTop="80dp"
        android:text="Tomar Foto"
        app:layout_constraintEnd_toEndOf="@+id/idImagen"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/idImagen"
        app:layout_constraintTop_toBottomOf="@+id/idImagen" />

    <Button
        android:id="@+id/btn_subir_firebase"
        android:layout_width="133dp"
        android:layout_height="56dp"
        android:layout_marginTop="156dp"
        android:text="Tomar Foto"
        app:layout_constraintEnd_toEndOf="@+id/idImagen"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/idImagen"
        app:layout_constraintTop_toBottomOf="@+id/idImagen" />

    <Button
        android:id="@+id/btn_subir_desde_firebase"
        android:layout_width="133dp"
        android:layout_height="56dp"
        android:layout_marginTop="296dp"
        android:text="Tomar Foto"
        app:layout_constraintEnd_toEndOf="@+id/idImagen"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/idImagen"
        app:layout_constraintTop_toBottomOf="@+id/idImagen" />

    <ImageView
        android:id="@+id/idImagen"
        android:layout_width="288dp"
        android:layout_height="248dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.178"
        app:srcCompat="@drawable/imagen_selected" />

    <EditText
        android:id="@+id/id_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/idImagen"
        app:layout_constraintStart_toStartOf="@+id/idImagen"
        app:layout_constraintTop_toBottomOf="@+id/idImagen" />
</androidx.constraintlayout.widget.ConstraintLayout>