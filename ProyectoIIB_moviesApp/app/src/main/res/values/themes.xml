<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProyectoIIB_moviesApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="colorOnPrimary">@color/Background</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:colorBackground">@color/Background</item>

    </style>


    <style name="MyDatePicker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:headerBackground">@color/green</item>

    </style>

    <style name="Theme.ProyectoIIB_moviesApp.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>